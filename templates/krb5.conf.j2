{{ ansible_managed | comment }}

includedir /var/lib/sss/pubconf/krb5.include.d/

[logging]
  default = FILE:/var/log/krb5libs.log
  kdc = FILE:/var/log/krb5kdc.log
  admin_server = FILE:/var/log/kadmind.log

[libdefaults]
  default_realm = {{ domain_join__dns_domain_name | upper }}
  dns_lookup_realm = false
  ticket_lifetime = 24h
  renew_lifetime = 7d
  forwardable = true
  rdns = false
  pkinit_anchors = /etc/pki/tls/certs/ca-bundle.crt
  default_ccache_name = KEYRING:persistent:%{uid}

[realms]
  {{ domain_join__dns_domain_name | upper }} = {
{% for domain_controller in domain_join__domain_controllers %}
    kdc = {{ domain_controller }}
{% endfor %}
    admin_server = {{ domain_join__domain_controllers[0] }}
    default_domain = {{ domain_join__dns_domain_name }}
  }

[domain_realm]
  .{{ domain_join__dns_domain_name }} = {{ domain_join__dns_domain_name | upper }}
  {{ domain_join__dns_domain_name }} = {{ domain_join__dns_domain_name | upper }}